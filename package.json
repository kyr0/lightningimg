{
  "name": "lightningimg",
  "description": "A transparent and safe image converter. Encodes PNG, JPG, TIFF to WebP.",
  "author": "Aron Homberg <info@aron-homberg.de>",
  "license": "MIT",
  "version": "0.0.1",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "MACOSX_DEPLOYMENT_TARGET=11.0 SDKROOT=$(xcrun --sdk macosx --show-sdk-path) napi build --platform --release",
    "build:debug": "MACOSX_DEPLOYMENT_TARGET=11.0 SDKROOT=$(xcrun --sdk macosx --show-sdk-path) napi build",
    "clean": "rm -rf ./target",
    "pretest": "npm run build",
    "test": "node ./test.js"
  },
  "napi": {
    "name": "lightningimg",
    "triples": {
      "defaults": true,
     "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc",
        "aarch64-pc-windows-msvc"
      ]
    }
  },
  "devDependencies": {
    "@napi-rs/cli": "^1.0.0"
  }
}
